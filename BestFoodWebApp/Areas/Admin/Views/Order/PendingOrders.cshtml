@using BestFood.Core.ViewModels.Order
@{
	ViewData["Title"] = "Pending Orders";
}

@model IEnumerable<OrderViewModel>

<div class="card card-success">
	<div class="card-body">
		@if (Model == null || Model.Count() == 0)
		{
			<h3 style="text-align:center">No pending orders</h3>
		}
		else
		{
			<div class="card">
				<div class="card-header">
					<h3 class="card-title">Pending Orders</h3>
				</div>
				<div class="card-body p-0">
					<table class="table table-striped projects" style="height:10px !important">
						<thead>
							<tr>
								<th style="width: 1%">
									#
								</th>
								<th style="width: 35%">
									Order Id
								</th>
								<th style="width: 20%">
									Address
								</th>
								<th>
									Phone Number
								</th>
								<th style="width: 8%" class="text-center">
									Status
								</th>
								<th style="width: 17%">
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var order in Model)
							{
								<tr>
									<td>
										#
									</td>
									<td>
										<a>
											@order.Id
										</a>
										<br>
										<small>
											Created @order.CreationDate
										</small>
									</td>
									<td>
										@order.Address
									</td>
									<td>
										@order.PhoneNumber
									</td>
									<td class="project-state">
										<span class="badge badge-warning">@order.OrderStatus</span>
									</td>
									<td class="project-actions text-right">
										<a class="btn btn-primary btn-sm" href="/admin/Order/Details/@order.Id">
											<i class="fas fa-info-circle"></i>
											View Order Info
										</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>

			</div>
		}
	</div>
</div>
