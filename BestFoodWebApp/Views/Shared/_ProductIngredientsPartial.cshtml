@using BestFood.Core.ViewModels.Product

@{
}
@if (ViewBag.ProductIngredients != null)
{
	<label>Ingredients</label>
	@foreach (var ing in ViewBag.ProductIngredients)
	{
		<div class="form-check">
			<input type="checkbox" value="@ing.IngredientId" checked="@ing.IsSelected" name="IngredientIds" />
			<label class="form-check-label">@ing.IngredientName</label>
		</div>
	}
}




