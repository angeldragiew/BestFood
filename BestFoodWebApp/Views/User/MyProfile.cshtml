@using BestFood.Core.ViewModels.User
@{
	ViewData["Title"] = "My Profile";
}

@model UserViewModel

<div class="profileDiv">

	<div class="card card-primary">
		<div class="card-body box-profile">
			<div class="text-center">
				<img class="profile-user-img img-fluid img-circle" src="~/img/avatar.png" alt="User profile picture">
			</div>
			<h3 class="profile-username text-center">@(Model.FirstName + " " + Model.LastName)</h3>
			<p class="text-muted text-center">@Model.Email</p>
			<ul class="list-group list-group-unbordered mb-3">
				<li class="list-group-item">
					@if (Model.PhoneNumber != null)
					{
						<b>Phone Number</b> <a class="float-right">@Model.PhoneNumber</a>
					}
					else
					{
						<b>Phone Number</b> <a class="float-right">Not Set</a>
					}
				</li>
				<li class="list-group-item">
					@if (Model.Address != null)
					{
						<b>Address</b> <a class="float-right">@Model.Address</a>
					}
					else
					{
						<b>Address</b> <a class="float-right">Not Set</a>
					}

				</li>
			</ul>
		</div>
		<a href="/User/Edit/@Model.Id" class="btn btn-primary edit-profile-button">Edit Profile</a>
	</div>
</div>

@section Head{
<link rel="stylesheet" href="~/css/user.css" />
}